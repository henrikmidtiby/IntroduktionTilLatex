\newcommand{\templateforside}{
	\phantom{g}
	\vspace{2.5cm}
	\noindent
	\begin{Huge}
	{\titel}
	\end{Huge}
	\vspace{11cm}

	\begin{tabular}{@{} l l @{}}
	\hline
	Titel           & \titel                \\
	Udarbejdet af   & \forfattere           
	\ifthenelse
		{\equal{\dato}{}}
		{}
		{ \\Afleveringsdato  & \dato}
	\ifthenelse
		{\equal{\fag}{}}
		{}
		{ \\Fag      & \fag}
	\\
	\hline
	\end{tabular}
	\thispagestyle{empty}
	\newpage
}

